}
else {
  /* handle share deleted case */
  echo "<p class='notice'>Share $name has been deleted.</p>";
  echo "<p class='notice'><button type='button' onClick='done();'>OK</button></p>";
  return;
}
  
/* check for empty share */
function shareEmpty($name) {
  return (($files = @scandir('/mnt/user/' . $name)) && (count($files) <= 2));
}
